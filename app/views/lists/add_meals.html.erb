<h1>Add Meals To List</h1>

<% if @list_items.blank? %>
	<%= "No items added to list" %>
<% else %>
	<h3>Items added:</h3>
	<% @list_items.each do |list_item| %>
		<p><%= Ingredient.find_by(:id => list_item.ingred_id).name %></p>
	<% end %>
<% end %>

<h3>Meals you can add</h3>
<% @meals.each do |meal| %>
    <p><b><%= link_to meal.name, meal_path(meal.id) %></b></p>
    <p><%= meal.description %></p>
    <p><%= image_tag meal.image, size:"420x325"%></p>
    <p><%= button_to 'Add Meal to List', "/addmeals/#{@list.id}?meal=#{meal.id}", method: :post %></p>
    <br>
<% end %>
