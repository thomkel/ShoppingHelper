<h1>Lists</h1>

<%= button_to 'Create New List', new_list_path, method: :get %><br>

<% @lists.each do |list| %>
    <p><strong><%= link_to list.name, "/lists/#{list.id}" %></strong></p>
    <p><%= link_to 'Show', list %> | 
    <%= link_to 'Edit', edit_list_path(list) %> | 
    <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>


