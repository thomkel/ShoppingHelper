<h1>Add Ingredients</h1>

<%= form_tag "/meals/#{params[:id]}/add", :method => 'post' do %>
	<% for i in 1..10 %>
		<% ingredsym = "ingred" + i.to_s %>
		<% measuresym = "measure" + i.to_s %>

		<div class="field">
		  <%= label_tag "#{ingredsym}" %>
		  <%= text_field_tag "#{ingredsym}" %>
		</div>	
		<div class="field">
		  <%= label_tag "#{measuresym}" %>
		  <%= text_field_tag "#{measuresym}" %>
		</div>	
		<br>
	<% end %>
	<div class="actions">
		<%= submit_tag "Save New Ingredients" %>
	</div>
	<br>
<% end %>